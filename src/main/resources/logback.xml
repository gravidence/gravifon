<configuration>
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level [%-27thread] %-40logger{40}| %message%n</pattern>
        </encoder>
    </appender>

    <logger name="org.gravidence" level="DEBUG" />
    <logger name="org.gravidence.gravifon.event.EventBus" level="DEBUG" />

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>